<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@android:integer/config_shortAnimTime" android:exitFadeDuration="@android:integer/config_shortAnimTime">

    <!-- pressed state -->
    <item android:drawable="@drawable/btn_raised_pressed" android:state_pressed="true" />

    <!-- focused state -->
    <item android:color="@color/btn_disabled_text_color" android:drawable="@drawable/btn_raised_focused" android:state_focused="true" />

    <!-- disabled state -->
    <item android:color="@color/btn_disabled_text_color" android:drawable="@drawable/btn_raised_disabled" android:state_enabled="false" />

    <!-- normal state -->
    <item android:drawable="@drawable/btn_raised_normal" />
</selector>